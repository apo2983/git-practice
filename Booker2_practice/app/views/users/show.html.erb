<%=render  'users/list',user: @user,book: @book_new %>
	<div class="col-xs-9">
		<h2>Books</h2>
		<table class="table">
			<thead>
				<tr>
					<th></th>
					<th>Title</th>
					<th>Opinion</th>
				</tr>
			</thead>
			<% @books.each do |book|%>
				<tbody>
					<tr>
						<td><%= attachment_image_tag @user ,:profile_image, fallback:'no_image.jpg',size:'50x50'%></td>
						<td>
							<%= link_to book_path(book.id) do%>
								<%= book.title %>
							<% end %>
						</td>
						<td><%= book.body %></td>
					</tr>
				</tbody>
			<% end %>
		</table>
	</div>
