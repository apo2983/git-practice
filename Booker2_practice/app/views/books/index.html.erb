<%= render 'users/list' ,user:@user,book:@book_new %>
<div class="col-xs-9">
	<h2>Books</h2>
	<table class="table">
		<thead>
			<tr>
				<th></th>
				<th>Title</th>
				<th>Opinion</th>
			</tr>
		</thead>
		<tbody>
			<% @books.each do |book| %>
				<tr>
					<td><%= attachment_image_tag book.user,:profile_image,format:'jpeg',fallback:'no_image.jpg',size:'50x50'%></td>
					<td><%= book.title %></td>
					<td><%= book.body %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>