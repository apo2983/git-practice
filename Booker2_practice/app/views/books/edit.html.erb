<div class="col-md-6 col-md-offset-3">
	<h2>Editing Book</h2>
	<%= form_for(@book,url:book_path(@book.id),method: :patch) do |f|%>
		<div class="field">
			<p>Title</p>
			 <%= f.text_field :title ,class:'col-xs-12'%>
		</div>
		<div class="field">
			<p>Opinion</p>
			 <%= f.text_area :body,class:'col-xs-12'%>
		</div>
		<div class="actions">
			<%= f.submit "Update Book" ,class:'btn btn-primary col-xs-12'%>
		</div>
	<% end %>
</div>